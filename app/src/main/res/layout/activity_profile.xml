<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background2"

    android:backgroundTintMode="multiply"
    android:backgroundTint="#f5e7ba"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/nokialogo"
        android:orientation="horizontal"
        android:id="@+id/coverPhotoID"
        android:layout_height="100dp">

    </LinearLayout>

    <ImageView
        android:contentDescription="Profile icon"
        android:layout_width="120dp"
        android:layout_marginLeft="5dp"
        android:layout_height="120dp"
        android:id="@+id/pfIconID"
        android:layout_marginTop="82dp"
        android:src="@drawable/malepficon"/>

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/pfNameID"
        android:text="NAME HERE"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/pfIconID"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/coverPhotoID"/>

    <TextView
        android:id="@+id/pfDesignationID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOKIA Bengaluru"
        android:layout_marginLeft="7dp"
        android:layout_below="@+id/pfNameID"
        android:layout_toRightOf="@+id/pfIconID"/>

    <ImageView
        android:contentDescription="Edit Icon"
        android:id="@+id/pfEditID"
        android:layout_alignParentRight="true"
        android:src="@drawable/edit_icon"
        android:layout_width="30dp"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/pfNameID"/>

    <ListView
        android:id="@+id/pfprofileDetailsID"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="320dp"
        android:divider="#010421"
        android:dividerHeight="1dp"
        android:layout_below="@+id/pfIconID">

    </ListView>

</RelativeLayout>