<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="btracker.example.raggitha.btracker.homeProfileActivity">

    <ImageView
        android:contentDescription="Profile icon"
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="180dp"
        android:id="@+id/hmpfIconID"
        android:layout_centerHorizontal="true"
        android:src="@drawable/malepficon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hmpfNameID"
        android:text="Name"
        android:textAlignment="center"
        android:layout_below="@+id/hmpfIconID"
        android:textSize="35sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/hmpfGenderLayoutID"
        android:layout_below="@+id/hmpfNameID"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hmpfGenderIconID"
            android:src="@drawable/maleicon"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="M/F"
            android:textColor="#0e0e0e"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/hmpfGenderID"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/hmpfDOBLayoutID"
        android:layout_below="@+id/hmpfGenderLayoutID"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hmpfBdayIconID"
            android:src="@drawable/birthday_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text=" DD/MM/YYYY"
            android:textColor="#0e0e0e"
            android:textSize="20sp"
            android:id="@+id/hmpfDOBID"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/hmpfEmailLayoutID"
        android:layout_below="@+id/hmpfDOBLayoutID"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/EPEmailIconID"
            android:src="@drawable/emailicon2"
            android:layout_marginLeft="3dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:text="xyz@nokia.com"
            android:textColor="#0e0e0e"
            android:textSize="20sp"
            android:id="@+id/hmpfEmailID"
            android:textStyle="normal"
            android:layout_marginLeft="12dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/hmpfLineManagerLayoutID"
        android:layout_below="@+id/hmpfEmailLayoutID"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/hmpfmanagerIconID"
            android:layout_marginLeft="3dp"
            android:src="@drawable/linemanagericon"/>

        <TextView
            android:text="Line Manager"
            android:id="@+id/hmpfmanagerID"
            android:textColor="#0e0e0e"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginLeft="12dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/hmpfTeamLayoutID"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/hmpfLineManagerLayoutID"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/hmpfTeamIconID"
            android:src="@drawable/teamicon" />

        <TextView
            android:text="GDC_XYZ"
            android:id="@+id/hmpfTeamID"
            android:textColor="#0e0e0e"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView
        android:contentDescription="Email Icon"
        android:id="@+id/hmPfEmailIconID"
        android:src="@drawable/emailicon"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp" />


</RelativeLayout>
