<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="btracker.example.raggitha.btracker.homeProfileActivity">

    <ImageView
        android:contentDescription="Profile icon"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_height="200dp"
        android:id="@+id/hmpfIconID"
        android:layout_centerHorizontal="true"
        android:src="@drawable/malepficon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hmpfNameID"
        android:text="Name"
        android:textAlignment="center"
        android:layout_below="@+id/hmpfIconID"
        android:textSize="35sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <TextView
        android:text="M/F"
        android:textColor="#0e0e0e"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hmpfNameID"
        android:id="@+id/hmpfGenderID"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/hmpfGenderIconID"
        android:layout_toLeftOf="@+id/hmpfGenderID"
        android:layout_alignBottom="@+id/hmpfGenderID"
        android:src="@drawable/maleicon"
        android:layout_width="30dp"
        android:layout_marginRight="5dp"
        android:layout_height="30dp" />

    <TextView
        android:text=" DD/MM/YYYY"
        android:textColor="#0e0e0e"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/hmpfDOBID"
        android:layout_below="@+id/hmpfGenderID"
        android:layout_marginTop="5dp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/hmpfBdayIconID"
        android:layout_toLeftOf="@+id/hmpfDOBID"
        android:layout_alignBottom="@+id/hmpfDOBID"
        android:src="@drawable/birthday_icon"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:text="xyz@nokia.com"
        android:textColor="#0e0e0e"
        android:textSize="20sp"
        android:id="@+id/hmpfEmailID"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hmpfDOBID"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/EPEmailIconID"
        android:src="@drawable/emailicon2"
        android:layout_toLeftOf="@+id/hmpfEmailID"
        android:layout_alignBottom="@+id/hmpfEmailID"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <TextView
        android:text="Line Manager"
        android:id="@+id/hmpfmanagerID"
        android:textColor="#0e0e0e"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hmpfEmailID"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/hmpfmanagerIconID"
        android:layout_toLeftOf="@+id/hmpfmanagerID"
        android:layout_alignBottom="@+id/hmpfmanagerID"
        android:src="@drawable/linemanagericon"
        android:layout_marginRight="5dp"/>

    <TextView
        android:text="GDC_XYZ"
        android:id="@+id/hmpfTeamID"
        android:textColor="#0e0e0e"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hmpfmanagerID"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/hmpfTeamIconID"
        android:layout_toLeftOf="@+id/hmpfTeamID"
        android:layout_alignBottom="@+id/hmpfTeamID"
        android:src="@drawable/teamicon"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:contentDescription="Email Icon"
        android:id="@+id/hmPfEmailIconID"
        android:src="@drawable/emailicon"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp" />


</RelativeLayout>
