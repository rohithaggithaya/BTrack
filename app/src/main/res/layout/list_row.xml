<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="NAME"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#0a0909"
        android:textStyle="bold"
        android:id="@+id/listNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/listNameID"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bdayIcon"
            android:src="@drawable/bdayicon"
            android:paddingBottom="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="DOB"
            android:id="@+id/listDOBID"
            android:textSize="20sp"
            android:textColor="#504c4c"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Team"
            android:gravity="right"
            android:id="@+id/listTeamID"
            android:textColor="#504c4c"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text=">"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#c3413e3e"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />


</RelativeLayout>