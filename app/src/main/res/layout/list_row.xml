<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="NAME"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/cameraIconID"
        android:layout_marginLeft="10dp"
        android:textSize="21sp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textColor="#0a0909"
        android:textStyle="bold"
        android:id="@+id/listNameID"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/cameraIconID"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/unisexicon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/listNameID"
        android:layout_toRightOf="@+id/cameraIconID"
        android:layout_alignLeft="@+id/listNameID"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bdayIcon"
            android:src="@drawable/bdayicon"
            android:paddingBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="DOB"
            android:id="@+id/listDOBID"
            android:textSize="12sp"
            android:textColor="#504c4c"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Team"
            android:gravity="right"
            android:id="@+id/listTeamID"
            android:textColor="#504c4c"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>