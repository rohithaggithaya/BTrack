<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="btracker.example.raggitha.btracker.ForgotPassActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/fpLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/userNameIconID"
            android:src="@drawable/usernameicon"
            android:layout_width="30dp"
            android:baselineAlignBottom="true"
            android:layout_height="30dp" />

        <EditText
            android:hint="Your registered mail ID here"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/forgotmailID"
            android:textSize="18sp"
            />

    </LinearLayout>

    <TextView
        android:text="After all you are a Human!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:textAlignment="center"
        android:id="@+id/forgotTitle1ID"
        android:textSize="23sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Let's reset it"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotTitle1ID"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:id="@+id/forgotTitle2ID"
        android:textSize="23sp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="RESET PASSWORD"
        android:id="@+id/resetButton"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/fpLinearLayout"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
